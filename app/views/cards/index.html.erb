<h2 class="mb-3">YU-GI-OH Card Listing</h2>

<ul class="list-group">
  <% @cards[1..20].each do |card| %>
    <li>
      <div class="row mb-3">
        <div class="col-sm-12 col-md-6 col-lg-3">
          <img src="<%= card.card_image_small %>" alt="<%= card.name %>">
        </div>
        <div class="col-sm-12 col-md-6 col-lg-9">
          <h4><%= card.name %></h4>
          <p><%= card.card_type %></p>
          <p><%= card.race %></p>
          <p><%= card.description %></p>
        </div>
      </div>
    </li>
  <% end %>
</ul>

