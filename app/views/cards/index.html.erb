<h2 class="mb-3">YU-GI-OH Card Listing</h2>

<ul class="list-group">
  <% @cards[1..150].each do |card| %>
    <li>
      <div class="row mb-3">
        <div class="col-sm-12 col-md-6 col-lg-3">
          <img src="<%= card.card_image_small %>" alt="<%= card.name %>">
        </div>
        <div class="col-sm-12 col-md-6 col-lg-9">
          <h4><strong>Name:</strong> <%= link_to card.name, card %></h4>
          <p><strong>Card Type:</strong> <em><%= card.card_type %></em></p>
          <p><strong>Card Sub Type:</strong> <em><%= card.race %></em></p>
        </div>
      </div>
    </li>
  <% end %>
</ul>

